{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "enter venv",
            "type": "shell",
            "command": "source .venv/bin/activate",
            "problemMatcher": []
        },
        {
            "label": "build app with pyinstaller",
            "type": "shell",
            "command": "pyinstaller",
            "args": [
                "--name",
                "The Forge Macro",
                "--windowed",
                "--onedir",
                "--clean",
                "--exclude-module",
                "PyQt6.QtBluetooth",
                "--exclude-module",
                "PyQt6.Qt3DCore",
                "--exclude-module",
                "PyQt6.Qt3DRender",
                "--exclude-module",
                "PyQt6.QtWebEngineCore",
                "--exclude-module",
                "PyQt6.QtQuick",
                "--exclude-module",
                "PyQt6.QtQml",
                "MACRO.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "Full Build Task",
            "dependsOrder": "sequence",
            "dependsOn": [
                "enter venv",
                "build app with pyinstaller"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
